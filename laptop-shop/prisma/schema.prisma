// Prisma schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Laptop {
  id           Int      @id @default(autoincrement())
  title        String
  brand        String
  price        Int
  ramGB        Int
  storageGB    Int
  storageType  String
  cpu          String
  gpu          String
  condition    String
  image        String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
